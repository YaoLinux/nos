# Depends on: gtk2 gconf libnotify xorg-libxscrnsaver glibc alsa-lib nspr nss pulseaudio libcxx

description="All-in-one voice and text chat for gamers that's free and secure."
url="https://discordapp.com/"
packager="tnut <tnut@nutyx.org>"
contributors="Greg"

name=discord
version=0.0.2
release=1
run=(libcxx)
source=(https://dl.discordapp.net/apps/linux/$version/$name-$version.deb)


# source=(https://dl.discordapp.net/apps/linux/$version/$name-$version.tar.gz)


build() {
	ar x $name-$version.deb
	bsdtar xf data.tar.xz
	mv usr $PKG
}
