makedepends=(openjdk xdg-utils)

description="Cross-platform file backup"
url="http://www.frostwire.com"

packager="Yaolinux Team"
maintainer="rems"

name=frostwire
version=6.8.4
_version=292

run=(openjdk)

source=(https://github.com/frostwire/frostwire/releases/download/frostwire-desktop-${version}-build-${_version}/frostwire-${version}.amd64.tar.gz
        $name.desktop
        $name.png)

build() {

mkdir -p $PKG/opt/frostwire/
cp -r "frostwire-${version}.amd64/."  $PKG/opt/frostwire/
install -vDm644 $SRC/$name.desktop $PKG/usr/share/applications/$name.desktop
install -vDm644 $SRC/$name.png $PKG/usr/share/pixmaps/$name.png
}
