# Depends on: python

description="Cross-platform text editor"
packager="liberodark"
url="https://github.com/Alexey-T/CudaText"

name=cudatext
version=1.76.2.0

run=(python)

source=(https://github.com/liberodark/CudaText/releases/download/$version/cudatext_$version-1_gtk2_amd64.deb)

build() {
tar xvf data.tar.xz
cp -r usr $PKG
}
