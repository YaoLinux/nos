makedepends=(gtk3 nss xorg-libxtst gconf xorg-libx11 freetype freefont-ttf desktop-file-utils shared-mime-info alsa-lib hicolor-icon-theme)

description="Web browser that blocks ads and trackers by default."
url="https://brave.com"

packager="Yaolinux Team"
maintainer="minzord"

name=brave-browser
version=1.4.96

run=(gtk3 nss xorg-libxtst gconf xorg-libx11 freetype freefont-ttf desktop-file-utils shared-mime-info alsa-lib hicolor-icon-theme)

source=(https://github.com/brave/$name/releases/download/v$version/$name-$version-$release.x86_64.rpm
        libffmpeg.so)

build() {

	cp -a {opt,usr} $PKG
	cp libffmpeg.so $PKG/opt/brave.com/brave/libffmpeg.so 

	# install icons
	for res in 16 24 32 48 64 128 256; do
            install -Dm644 $PKG/opt/brave.com/brave/product_logo_${res}.png \
	                   $PKG/usr/share/icons/hicolor/${res}x${res}/apps/brave-browser.png
	done

}
